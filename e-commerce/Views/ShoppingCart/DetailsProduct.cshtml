@model e_commerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_LayoutCustomer";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="d-flex justify-content-center">
                @if (Model.ImageFile != null && Model.ImageFile.Length > 0)
                {
                    <img src="data:image/jpg;base64,@(Convert.ToBase64String(Model.ImageFile))" class="img-fluid rounded" style="height: 500px; width: auto;" />
                }
                else
                {
                    <img src="https://placehold.co/500x600/png" class="img-fluid rounded" style="height: 500px; width: auto;" />
                }
            </div>
        </div>

        <div class="col-lg-6 col-md-6">
            <h2 class="text-uppercase text-dark font-weight-bold">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <p class="text-danger h4">$@Model.Price</p>

            <hr class="my-4" />

            <form asp-action="AddToCart" method="post">
                <div class="form-group">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="99" />
                    <input type="hidden" name="id" value="@Model.Id" />
                </div>

                <form asp-controller="ShoppingCart" asp-action="DetailsCart" method="post">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </button>
                </form>

            </form>
        </div>
    </div>

