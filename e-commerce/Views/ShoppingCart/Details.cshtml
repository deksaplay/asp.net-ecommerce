@model e_commerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_LayoutCustomer";
}

<div class="container my-5">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
            @if (Model.ImageFile != null && Model.ImageFile.Length > 0)
            {
                <img src="data:image/jpg;base64,@(Convert.ToBase64String(Model.ImageFile))" class="img-fluid rounded mb-4" alt="Product Image" />
            }
            else
            {
                <img src="https://placehold.co/600x400/png" class="img-fluid rounded mb-4" alt="Placeholder Image" />
            }
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="font-weight-bold text-dark">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>

            <div class="mb-3">
                <span class="h4 text-danger">$@Model.Price</span>
            </div>

            <div class="mb-3">
                <span class="badge bg-success">In Stock: @Model.Stock</span>
            </div>

            <!-- Add to Cart Button -->
            <form>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" min="1" value="1" class="form-control" style="width: 100px;">
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-cart-fill"></i> Add to Cart
                </button>
            </form>
        </div>
    </div>

    <hr>

    <!-- Additional Product Information (Optional) -->
    <div class="row mt-4">
        <div class="col-12">
            <h4>Product Information</h4>
            <ul class="list-unstyled">
                <li><strong>Category:</strong> @Model.ProductCategory.Name</li>
                <li><strong>Stock:</strong> @Model.Stock</li>
                <li><strong>SKU:</strong> @Model.Id</li>
            </ul>
        </div>
    </div>
</div>
