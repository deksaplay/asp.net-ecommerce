@model Product

<h2>Detail Produk</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">Harga: @Model.Price.ToString("C")</p>

        <form asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="form-group">
                <label for="quantity">Jumlah:</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control" style="width: 100px;" />
            </div>
            <button type="submit" class="btn btn-primary mt-2">Tambah ke Keranjang</button>
        </form>
    </div>
</div>