@model e_commerce.Models.Product

@{
    ViewBag.Title = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />


        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Stock" class="p-0"></label>
            <input asp-for="Stock" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-2">
            @* <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow"> *@
                <option disabled selected>--Select Category--</option>
            </select>
           @*  <label asp-for="Product.CategoryId" class="ms-2"></label>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span> *@
        </div>
        <div class="row mt-3">
                            
            <div class="col-6 col-md-3 mb-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
             
            <div class="col-6 col-md-3 mb-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}