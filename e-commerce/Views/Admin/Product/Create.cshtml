@model e_commerce.Models.Product
@{
    var categories = ViewBag.Categories as List<e_commerce.Models.Category>; // Ensure you're casting ViewBag correctly
}
@{
    ViewBag.Title = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4 shadow-sm rounded">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) // Display validation summary

        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ImageFile" class="p-0"></label>
            <div class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src='@Url.Action("ShowImage", "Product", new { id = Model.Id })' style="height: 200px; width:200px;" />
                }
                else
                {
                    <p>No image available</p>
                }
            </div>

        <div class="mb-3 row p-1">
            <label asp-for="ImageFile" class="p-0"></label>
            <div class="col-sm-10">
                <img src='@Url.Action( "ShowImage", "Product", new { id = Model.Id } )' style="height: 200px; width:200px;" />
            </div>
            @Html.Label("", Model.ImagePath)
            <div class="col-sm-10">
                @Html.TextBox("file", "", new { type = "file" })
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />

                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" type="text" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">

            <label asp-for="Stock" class="p-0"></label>
            <input asp-for="Stock" type="text" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-2">

                @if (ViewBag.Categories == null || !ViewBag.Categories.Any())
                {
                    <p>No categories available. Please add some categories first.</p>
                }
                else
                {
                    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                }
                else
                {
                <p>No categories available. Please add categories first.</p>
                }
            </div>
                            
            <div class="col-6 col-md-3 mb-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
             
            <div class="col-6 col-md-3 mb-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
else
{
<p>Error: Model is null.</p>
}

@section Scripts {
    @{
        @await Html.PartialAsync("_ValidationScriptsPartial")
        ;
    }
}