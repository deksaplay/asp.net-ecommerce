@{
    ViewData["Title"] = "delete";
}


@model e_commerce.Models.Category

<form method="post">
    <div class="border p-3 mt-4"></div>
        <div class="row pb-2">
            <h2 class="text-primary">delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <div class="col-sm-12">
                <input asp-for="Name" type="text" class="form-control" disabled="disabled"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <div class="col-sm-12">
                <input asp-for="Description" type="text" class="form-control" disabled="disabled" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        <div>
        <div class="row mt-3">

            <div class="col-6 col-md-3 mb-3">
                <button type="submit" class="btn btn-primary form-control">delete</button>
            </div>

            <div class="col-6 col-md-3 mb-3">
                <a asp-controller="CategoryProduct" asp-action="index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

