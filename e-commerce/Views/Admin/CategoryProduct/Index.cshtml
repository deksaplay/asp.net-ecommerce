@model System.Data.DataTable

@{
    ViewBag.Title = "Category List";
}

<div class="container"> 
    <div class="row pt-4 pb-4">
    <div class="col-6">
        <h2 class="text-primary">
            Category List
        </h2>

    </div>
    <div class="col-6 text-end">
            <a asp asp-controller="ProductCategory" asp-action="Create"  class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i>  Create New Category
        </a>

    </div>
    </div>


<table class="table table-bordered table-striped" >
    <tr>
        <th>id</th>
        <th>Category Name</th>
        <th>Description</th>
        <th>Createat</th>
        <th>updateat</th>
        <th></th>
    </tr>
@foreach (System.Data.DataRow item in Model.Rows)

{
    
            <tr>
                <td>@item["Id"].ToString()</td>
                <td>@item["Name"].ToString()</td>
                <td>@item["Description"].ToString()</td>
                <td>@item["CreatedAt"].ToString()</td>
                <td>@item["CreatedAt"].ToString()</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp asp-controller="ProductCategory" asp-action="Edit" asp-route-id="@item["Id"].ToString()" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@item["Id"].ToString()" class="btn btn-danger mx-2">
                            <i class="bi bi-calendar-x-fill"></i> Delete
                        </a>
                    </div>
                </td>
                </tr>
}
</table>

</div>
