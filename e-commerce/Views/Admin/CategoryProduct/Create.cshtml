@model e_commerce.Models.Category

    @{
        ViewBag.Title = "Create";
    }




<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">

            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">

            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />
        </div>
        <div class="row mt-3">
                
            <div class="col-6 col-md-3 mb-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
             
            <div class="col-6 col-md-3 mb-3">
                <a asp-controller="CategoryProduct" asp-action="index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
}
else
{
<p>Error: Model is null.</p>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@if (Model == null)
{
    <p>Error: Model is null.</p>
}
@if (ViewBag.Categories == null)
{
    <p>Error: Categories not loaded properly.</p>
}
