@model IEnumerable<e_commerce.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutCustomer";
}

<div class="container my-5">
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 d-flex align-items-stretch">
                <div class="card h-100 border-0 shadow-sm rounded">
                    <div class="card-img-top p-3 d-flex justify-content-center">
                        @if (product.ImageFile != null && product.ImageFile.Length > 0)
                        {
                            <img src="data:image/jpg;base64,@(Convert.ToBase64String(product.ImageFile))" class="img-fluid rounded" style="height: 250px; width: auto;" />
                        }
                        else
                        {
                            <img src="https://placehold.co/250x300/png" class="img-fluid rounded" style="height: 250px; width: auto;" />
                        }
                    </div>

                    <div class="card-body text-center">
                        <h5 class="card-title text-dark font-weight-bold text-uppercase">@product.Name</h5>
                        <p class="text-muted">@product.Description</p>
                        <p class="text-danger h5">
                            $@product.Price
                        </p>
                    </div>

                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center">
                        <a asp-controller="ShoppingCart" asp-action="Details_product" asp-route-id="@product.Id" class="btn btn-primary">
                            View Details
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }

        .card img {
            max-height: 250px;
            object-fit: cover;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .card-footer {
            margin-top: auto;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
        }

        .text-muted {
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>
}
