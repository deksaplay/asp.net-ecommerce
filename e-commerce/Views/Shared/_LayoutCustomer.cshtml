<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Render optional Styles section -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <!-- Jumbotron Section -->
        <div class="jumbotron jumbotron-fluid text-center text-white bg-primary py-5" style="background-image: url('/images/header-background.jpg'); background-size: cover; background-position: center;">
            <div class="container">
                <h1 class="display-4 font-weight-bold">Welcome to Our e-Commerce Platform</h1>
                <p class="lead font-italic">Find the best products for you at unbeatable prices!</p>
            </div>
        </div>

        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cart-fill"></i> e_commerce
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Search Bar -->
                    <form class="d-flex me-auto" style="flex-grow: 1;">
                        <input class="form-control me-2" type="search" placeholder="Search products..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>

                    <!-- Navbar Links -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock-fill"></i> About Us
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-person-badge-fill"></i> Admin
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-person-circle"></i> Account
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light pt-5 pb-4">
        <div class="container">
            <div class="row">
                <!-- About Us Column -->
                <div class="col-md-3 mb-4">
                    <h5 class="font-weight-bold text-uppercase">About Us</h5>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; height: 2px;">
                    <p class="text-muted">We are an online store dedicated to bringing you the best products at unbeatable prices. Your satisfaction is our priority.</p>
                </div>

                <!-- Help Column -->
                <div class="col-md-3 mb-4">
                    <h5 class="font-weight-bold text-uppercase">Help</h5>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; height: 2px;">
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">Customer Service</a></li>
                        <li><a href="#" class="text-muted">FAQ</a></li>
                        <li><a href="#" class="text-muted">Return Policy</a></li>
                    </ul>
                </div>

                <!-- Contact Column -->
                <div class="col-md-3 mb-4">
                    <h5 class="font-weight-bold text-uppercase">Contact Us</h5>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; height: 2px;">
                    <ul class="list-unstyled text-muted">
                        <li><i class="bi bi-envelope-fill"></i> support@ecommerce.com</li>
                        <li><i class="bi bi-phone-fill"></i> +123 456 789</li>
                        <li><i class="bi bi-geo-alt-fill"></i> 123 e-Commerce St, Jakarta</li>
                    </ul>
                </div>

                <!-- Social Media Column -->
                <div class="col-md-3 mb-4">
                    <h5 class="font-weight-bold text-uppercase">Follow Us</h5>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; height: 2px;">
                    <div class="d-flex justify-content-start">
                        <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
            </div>

            <!-- Horizontal Line -->
            <hr class="bg-white">

            <!-- Footer Bottom -->
            <div class="row text-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0">© 2024 Deksa e-commerce. All rights reserved.</p>
                </div>
                <div class="col-md-6">
                    <p class="text-muted mb-0">Made with <i class="bi bi-heart-fill text-danger"></i> by Deksa Team</p>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Render optional Scripts section -->
    @RenderSection("Scripts", required: false)
</body>
</html>
